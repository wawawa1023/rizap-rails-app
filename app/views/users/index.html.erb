<div class="container mt-5">
  <h1 class="mb-4">ToDoリスト</h1>
  
  <%= link_to "新しいタスクを作成", new_user_path, class: "btn btn-primary mb-3" %>

  <table class="table table-striped">
    <thead class="table-dark">
      <tr>
        <th>タイトル</th>
        <th>説明</th>
        <th>状態</th>
        <th>作成日</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.title %></td>
          <td><%= user.description %></td>
          <td>
            <span class="badge <%= user.completed? ? 'bg-success' : 'bg-warning' %>">
              <%= user.completed? ? '完了' : '未完了' %>
            </span>
          </td>
          <td><%= user.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td>
            <%= link_to "詳細", user_path(user), class: "btn btn-info btn-sm" %>
            <%= link_to "編集", edit_user_path(user), class: "btn btn-warning btn-sm" %>
            <%= form_with model: user, method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, class: "d-inline" do %>
              <%= submit_tag "削除", class: "btn btn-danger btn-sm" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

