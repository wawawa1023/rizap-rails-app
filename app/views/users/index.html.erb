<div class="container mt-5">
  <h1 class="text-center">ToDoリスト</h1>

  <div class="text-end mb-3">
    <%= link_to "新しいタスクを追加", new_user_path, class: "btn btn-primary" %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>作成日</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.title %></td>
          <td><%= user.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td>
            <%= link_to "詳細", user_path(user), class: "btn btn-info btn-sm" %>
            <%= link_to "編集", edit_user_path(user), class: "btn btn-warning btn-sm" %>
            <%= link_to "削除", user_path(user), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
