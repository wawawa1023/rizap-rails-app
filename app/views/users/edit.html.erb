<div class="container mt-5">
  <h1 class="mb-4">タスクを編集</h1>
  
  <div class="card p-4 shadow-sm">
    <div class="card-body">
      <%= form_with(model: @user, local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :title, "タスク名", class: "form-label" %>
          <%= f.text_field :title, class: "form-control", placeholder: "タスク名を入力" %>
        </div>

        <div class="mb-3">
          <%= f.label :description, "タスクの詳細", class: "form-label" %>
          <%= f.text_area :description, class: "form-control", rows: 4, placeholder: "詳細を入力" %>
        </div>

        <div class="mb-3 form-check">
          <%= f.check_box :completed, class: "form-check-input" %>
          <%= f.label :completed, "完了したらチェック", class: "form-check-label" %>
        </div>

        <div class="d-flex gap-2">
          <%= f.submit "更新", class: "btn btn-warning" %>
          <%= link_to "キャンセル", user_path(@user), class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
