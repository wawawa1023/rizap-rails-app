<div class="container mt-5">
  <h1 class="mb-4">タスク詳細</h1>
  <div class="card">
    <div class="card-body">
      <h3 class="card-title"><%= @user.title %></h3>
      <p class="card-text"><%= @user.description %></p>
      <p class="card-text">
        状態:
        <span class="badge <%= @user.completed? ? 'bg-success' : 'bg-warning' %>">
          <%= @user.completed? ? '完了' : '未完了' %>
        </span>
      </p>
      <a href="<%= edit_user_path(@user) %>" class="btn btn-warning">編集</a>
      <%= form_with model: @user, method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, class: "d-inline" do %>
        <%= submit_tag "削除", class: "btn btn-danger" %>
      <% end %>
      <a href="<%= users_path %>" class="btn btn-secondary">戻る</a>
    </div>
  </div>
</div>
