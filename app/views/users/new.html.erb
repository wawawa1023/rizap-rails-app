<div class="container mt-5">
  <h1 class="text-center">新しいタスクを追加</h1>

  <%= form_with model: @user,  class: "card p-4 shadow" do |f| %>
    <div class="mb-3">
      <%= f.label :title, "タスクのタイトル", class: "form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "例: 買い物リストを作る" %>
    </div>

    <div class="mb-3">
      <%= f.label :description, "詳細", class: "form-label" %>
      <%= f.text_area :description, class: "form-control", rows: 3, placeholder: "タスクの詳細を入力" %>
    </div>

    <%= f.submit "追加する", class: "btn btn-success w-100" %>
  <% end %>

  <div class="mt-3">
    <%= link_to "戻る", users_path, class: "btn btn-secondary" %>
  </div>
</div>
